        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">GtkHTML Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="enchant"/>,
      <xref linkend="gsettings-desktop-schemas"/>,
      <xref linkend="gtk3"/>, and
