    <bridgehead renderas="sect3">libggz Dependencies</bridgehead>

    <bridgehead renderas="sect4">Optional</bridgehead>
    <para role="optional"><xref linkend="gnutls"/>,
    <xref linkend="libgcrypt"/>, and
    <xref linkend="openssl"/></para>

