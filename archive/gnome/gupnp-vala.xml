        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">GUPnP Vala Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="gupnp-av"/>,
      <xref linkend="gupnp-dlna"/> and
