    <bridgehead renderas="sect3">GNOME User Share Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="gnome-bluetooth"/>,
      <xref linkend="libcanberra"/> and
      <xref linkend="yelp-xsl"/>
    </para>

