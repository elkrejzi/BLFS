      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Garcon Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="libxfce4ui"/>,
      <xref linkend="libxfce4util"/> and
      <xref linkend="gtk2"/> or
